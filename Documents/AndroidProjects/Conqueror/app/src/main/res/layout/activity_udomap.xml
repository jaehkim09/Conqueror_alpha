<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_udomap">

    <Button
        android:layout_width="113dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="14dp"
        android:id="@+id/navigateHome"
        android:background="@drawable/backtohome"
        android:layout_height="47dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/firstspot"
        android:layout_marginLeft="87dp"
        android:layout_marginStart="87dp"
        android:id="@+id/imageView2"
        android:layout_marginBottom="248dp"
        android:layout_above="@+id/navigateHome"
        android:layout_toRightOf="@+id/navigateHome"
        android:layout_toEndOf="@+id/navigateHome"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/secondspot"
        android:id="@+id/imageView"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="92dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fcompletedspot"
        android:id="@+id/imageView5"
        android:layout_above="@+id/navigateHome"
        android:layout_alignLeft="@+id/navigateHome"
        android:layout_alignStart="@+id/navigateHome"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="83dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/scompletedspot"
        android:id="@+id/imageView6"
        android:layout_alignTop="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/thridspot"
        android:id="@+id/imageView3"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_above="@+id/imageView"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5"/>


</RelativeLayout>